@model rentACarProject.Models.UpdateCustomerViewModel

@{
}
<h1>Müşteri Düzenleme Ekranı</h1>
<form method="post" action="View" class="mt-5">
    <div class="form-group">
        <label for="" class="form-label">Id:</label>
        <input type="text" class="form-control" asp-for="Id" readonly>
        <!-- kullanıcı herhangi değişiklik yapamasın -->
    </div>
    <div class="form-group">
        <label for="" class="form-label">Müşteri Adı :</label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label for="" class="form-label">Müşteri Soyadı :</label>
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label for="" class="form-label">Adres :</label>
        <input type="text" class="form-control" asp-for="Adress">
    </div>
    <div class="form-group">
        <label for="" class="form-label">Cep Numarası :</label>
        <input type="number" class="form-control" asp-for="contactNumber">
    </div><br>

    <div class="form-group">
        <label for="cars">Lütfen listeden araba seçiniz:</label><br>
        <select name="cars" id="cars">
            <option value="Toyota Camry">Toyota Camry</option>
            <option value="Honda Accord">Honda Accord</option>
            <option value="Tesla Model S">Tesla Model S</option>
            <option value="BMW 7 Series">BMW 7 Series</option>
            <option value="Ford Mustang">Ford Mustang</option>
            <option value="Skoda Fabia">Skoda Fabia</option>
            <option value="Renault Clio">Renault Clio</option>
            <option value="Fiat Egea">Fiat Egea</option>
            <option value="Volkswagen Golf 5">Volkswagen Golf 5</option>
            <option value="Audi A7">Audi A7</option>
        </select>
    </div>
    <div class="form-group">
        <label for="start-date">Kiralama Başlangıç Tarihi:</label>
        <input type="date" id="start-date" name="start-date">
    </div>
    <div class="form-group">
        <label for="end-date">Kiralama Bitiş Tarihi:</label>
        <input type="date" id="end-date" name="end-date">
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <button type="submit" class="btn btn-danger"
            asp-action="Delete"
            asp-controller="Customers">
        Delete
    </button> <!--CustomersControllersdan alıyoruz-->
</form>

